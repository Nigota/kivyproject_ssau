MDScreen:
    md_bg_color: self.theme_cls.backgroundColor

    MDRelativeLayout:

        MDBoxLayout:
            orientation: "vertical"

            TitleBar:

            MDScrollView:
                do_scroll_x: False

                MDBoxLayout:
                    id: main_scroll
                    padding: "4dp"
                    spacing: "10dp"
                    orientation: "vertical"
                    adaptive_height: True

        MDFabButton:
            pos_hint: {'center_x': 0.5, 'y': 0.02 }
            icon: "plus"
            style: "standard"
            on_release: app.createCard()